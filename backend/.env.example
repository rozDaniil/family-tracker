# Local simple setup (recommended)
DATABASE_URL=sqlite:///./family_life_calendar.db

# If you use PostgreSQL, replace DATABASE_URL with:
# DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/family_life_calendar

CORS_ORIGINS=["http://localhost:3000"]
FRONTEND_URL=http://localhost:3000
INVITE_RATE_LIMIT_PER_MINUTE=20
DB_CONNECT_TIMEOUT_SECONDS=5

# Google OAuth
# Redirect URI must be added in Google Cloud Console exactly as-is.
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Resend (transactional email)
RESEND_API_KEY=
RESEND_SENDER_EMAIL=
RESEND_SENDER_NAME=Family Life
